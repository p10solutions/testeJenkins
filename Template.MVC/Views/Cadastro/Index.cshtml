@{
    ViewData["Titulo"] = "Template";
    ViewData["Descricao"] = "Listagem";
}

<div class="row">
    <div class="col-md-12 card card-info card-outline">
        <div class="card-body">
                <h2>Templates</h2>
            <a class="novo_template btn btn-success" asp-action="Inclusao"><i class="fa fa-plus-circle"></i>&nbsp;Adicionar novo template</a>
                <div class="table-responsive">
                    <table id="tabelaTemplate" class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/Views/Template/index.js"></script>
}
@section Styles{
    <style>
        td, th {
            text-align: center;
        }

        i.fa-times {
            color: red;
        }

        i.fa-check {
            color: green;
        }

        a.novo_template{
            margin-bottom:10px;
            margin-top:10px;
        }
    </style>
}
