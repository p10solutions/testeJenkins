@model TemplateViewModel

<div class="form-group col-md-12">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>

<div class="form-group col-md-12">
    <label asp-for="Descricao" class="control-label"></label>
    <textarea asp-for="Descricao" class="form-control"></textarea>
    <span asp-validation-for="Descricao" class="text-danger"></span>
</div>

<div class="form-group col-md-12">
    <label asp-for="Ativo" class="control-label"></label>
    <input type="checkbox" asp-for="Ativo" class="form-control" />
    <span asp-validation-for="Ativo" class="text-danger"></span>
</div>

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="IdUsuario" />
<input type="hidden" asp-for="DataInclusao" />

<div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>